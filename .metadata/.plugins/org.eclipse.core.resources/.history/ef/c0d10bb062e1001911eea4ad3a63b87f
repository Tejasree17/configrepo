public class FirstProj {

    @RequestMapping("/hello")
    public String text() {
        return "Hi Teju!";
    }
    
    @RequestMapping(value="/world",method=RequestMethod.POST)
    public String texttwo(Employee e) {
        return "Hi world!";
    }


}
